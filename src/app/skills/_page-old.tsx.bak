// Live Metric Card Component
function LiveMetricCard({ icon, metric, label, subtext, color, target, delay }: {
  icon: string;
  metric: string;
  label: string;
  subtext: string;
  color: string;
  target: number;
  delay: number;
}) {
  const [count, setCount] = useState(0);
  const [isInView, setIsInView] = useState(false);

  useEffect(() => {
    if (!isInView) return;
    
    const isPercentage = metric.includes('%');
    const targetNum = isPercentage ? target : Math.floor(target);
    const duration = 2000;
    const steps = 60;
    const increment = targetNum / steps;
    let current = 0;

    const timer = setInterval(() => {
      current += increment;
      if (current >= targetNum) {
        setCount(targetNum);
        clearInterval(timer);
      } else {
        setCount(Math.floor(current * 10) / 10);
      }
    }, duration / steps);

    return () => clearInterval(timer);
  }, [isInView, target, metric]);

  return (
    <motion.div
      initial={{ opacity: 0, y: 30 }}
      whileInView={{ opacity: 1, y: 0 }}
      onViewportEnter={() => setIsInView(true)}
      viewport={{ once: true }}
      transition={{ duration: 0.6, delay }}
      whileHover={{ y: -5, transition: { duration: 0.2 } }}
      className="relative p-6 md:p-8 rounded-xl md:rounded-2xl dark:bg-slate-900/50 bg-white/90 border dark:border-slate-800 border-gray-300 overflow-hidden group cursor-pointer backdrop-blur-sm"
    >
      {/* Animated background gradient */}
      <motion.div
        className="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        style={{
          background: `radial-gradient(circle at 50% 50%, ${color}15, transparent 70%)`
        }}
      />
      
      {/* Floating particles */}
      {[...Array(3)].map((_, i) => (
        <motion.div
          key={i}
          className="absolute w-1 h-1 rounded-full opacity-0 group-hover:opacity-100"
          style={{ backgroundColor: color, left: `${20 + i * 30}%`, top: '20%' }}
          animate={{
            y: [0, -20, 0],
            opacity: [0, 1, 0],
          }}
          transition={{
            duration: 2,
            repeat: Infinity,
            delay: i * 0.3,
          }}
        />
      ))}

      <div className="relative z-10">
        <div className="text-5xl mb-4">{icon}</div>
        
        <motion.div
          className="text-5xl font-extrabold mb-3 font-mono"
          style={{ color }}
        >
          {metric.includes('%') ? `${count}%` : metric.includes('+') ? `${count}+` : count}
        </motion.div>
        
        <div className="dark:text-white text-gray-900 font-semibold text-lg mb-2">
          {label}
        </div>
        
        <div className="dark:text-slate-400 text-gray-600 text-sm">
          {subtext}
        </div>

        {/* Progress indicator */}
        <div className="mt-4 h-1 dark:bg-slate-800 bg-gray-300 rounded-full overflow-hidden">
          <motion.div
            className="h-full rounded-full"
            style={{ backgroundColor: color }}
            initial={{ width: 0 }}
            animate={{ width: isInView ? '100%' : 0 }}
            transition={{ duration: 2, delay: delay + 0.5 }}
          />
        </div>
      </div>
    </motion.div>
  );
}
